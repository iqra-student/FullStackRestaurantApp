@model OrderViewModel
@{
    ViewBag.Title = "My Cart";
}

<h1 class="mb-4 text-center fw-bold text-uppercase" style="color: #A0522D;">My Cart</h1>

<!-- Form to finalize and create the order -->
<form asp-action="PlaceOrder" method="post">
    <div class="card shadow mb-4">
        <div class="card-header bg-warning-subtle text-dark">
            <h4 class="mb-0">Order Items</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-bordered mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.OrderItems.Count; i++)
                    {
                        <tr>
                            <td class="align-middle">@Model.OrderItems[i].ProductName</td>
                            <td class="align-middle">@Model.OrderItems[i].Quantity</td>
                            <td class="align-middle">@Model.OrderItems[i].Price.ToString("C")</td>
                            <td class="align-middle">
                                @(Model.OrderItems[i].Price * Model.OrderItems[i].Quantity)
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="3" class="text-end fw-bold text-uppercase">Total Amount:</td>
                        <td class="bg-light text-dark fw-bold">
                            @Model.TotalAmount.ToString("C")
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-end">
        <a href="@Url.Action("Details", "Order")" class="btn text-white fw-semibold" style="background-color: #d2691e;">Place Order</a>
    </div>

</form>
