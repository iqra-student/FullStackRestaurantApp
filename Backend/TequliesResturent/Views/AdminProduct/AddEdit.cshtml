@model Product
@{
    ViewBag.Title = $"{ViewBag.Operation} Menu Item";
}

<div class="container mt-4">
    <h1>@ViewBag.Operation Menu Item</h1>

    <form asp-action="AddEdit" method="post" enctype="multipart/form-data" class="row">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="ImageUrl" />

        <div class="col-md-8">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" step="0.01" type="number" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Stock" class="form-label">Quantity In Stock</label>
                        <input asp-for="Stock" class="form-control" type="number" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="imageUpload" class="form-label">Upload Image</label>
                <input type="file" class="form-control" id="imageUpload" name="ImageFile" asp-for="ImageFile" accept="image/*" />

                @* Display current image if editing *@
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mt-2">
                        <p><strong>Current Image:</strong></p>
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                    </div>
                }
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5>Category</h5>
                    @foreach (Category category in ViewBag.Categories)
                    {
                        <div class="form-check">
                            @{
                                bool isChecked = Model.CategoryId == category.CategoryId;
                            }
                            <input type="radio" class="form-check-input" id="cat_@category.CategoryId" name="catId" value="@category.CategoryId" @(isChecked ? "checked" : "") />
                            <label class="form-check-label" for="cat_@category.CategoryId">@category.Name</label>
                        </div>
                    }
                </div>

                <div class="col-md-6">
                    <h5>Ingredients</h5>
                    <div style="max-height: 300px; overflow-y: auto;">
                        @foreach (Ingredient ingredient in ViewBag.Ingredients)
                        {
                            <div class="form-check">
                                @{
                                    bool isChecked = Model.ProductIngredients != null && Model.ProductIngredients.Any(i => i.IngredientId == ingredient.IngredientId);
                                }
                                <input type="checkbox" class="form-check-input" id="ing_@ingredient.IngredientId" name="ingredientIds" value="@ingredient.IngredientId"
                                       @(isChecked ? "checked" : "") />
                                <label class="form-check-label" for="ing_@ingredient.IngredientId">@ingredient.Name</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Image Preview Column -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6>Image Preview</h6>
                </div>
                <div class="card-body text-center">
                    <div id="imagePreview">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 250px;" />
                        }
                        else
                        {
                            <div class="text-muted">
                                <i class="fas fa-image fa-3x"></i>
                                <p>No image selected</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-save"></i> Save
            </button>
            <a asp-action="Index" asp-controller="AdminProduct" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>

<script>
    // Image preview functionality
    document.getElementById('imageUpload').addEventListener('change', function(e) {
        const file = e.target.files[0];
        const preview = document.getElementById('imagePreview');

        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.innerHTML = '<img src="' + e.target.result + '" class="img-fluid rounded" style="max-height: 250px;" alt="Preview">';
            }
            reader.readAsDataURL(file);
        }
    });
</script>