@{
    ViewData["Title"] = "Welcome to PakTasty Bites";
}

<style>
    .hero-section {
        background: url('https://images.unsplash.com/photo-1586190848861-99aa4a171e90?w=1500') center/cover no-repeat;
        color: white;
        padding: 120px 20px;
        text-align: center;
        position: relative;
    }

        .hero-section::after {
            content: '';
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
        }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: bold;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        margin: 20px 0;
        color: #f0f0f0;
    }

    .btn-custom {
        background-color: #ff7a45;
        color: white;
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 50px;
        transition: 0.3s ease;
        border: none;
    }

        .btn-custom:hover {
            background-color: #e76632;
            color: #fff;
        }

    .section-title {
        font-size: 2.2rem;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-bottom: 40px;
    }

    .about-section {
        padding: 80px 0;
        background-color: #fffaf5;
    }

    .about-image {
        border-radius: 15px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
    }

    .hungry-section {
        padding: 100px 20px;
        background: linear-gradient(120deg, #CD853F, #ff9152);
        color: white;
    }

    .contact-section {
        padding: 80px 0;
        background-color: #f8f9fa;
    }

    .contact-form input,
    .contact-form textarea {
        border-radius: 10px;
        border: 1px solid #ddd;
    }

    .contact-info h5 {
        color: #ff7a45;
        margin-top: 15px;
        font-weight: 600;
    }

    .fade-in {
        animation: fadeIn 1.2s ease-in forwards;
        opacity: 0;
    }

    @@keyframes fadeIn {
        from

    {
        transform: translateY(30px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    @@media (max-width: 767px) {
        .hero-title

    {
        font-size: 2.5rem;
    }

    .section-title {
        font-size: 1.75rem;
    }

    }
</style>

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content fade-in">
        <h1 class="hero-title">PakTasty Bites</h1>
        <p class="hero-subtitle">Experience the authentic flavors of Pakistan delivered fresh to your doorstep</p>
        <a class="btn-custom" href="/Product">Explore Our Menu</a>
    </div>
</section>

<!-- About Section -->
<section class="about-section">
    <div class="container">
        <div class="row align-items-center gy-5">
            <div class="col-md-6 fade-in">
                <img src="https://www.voguehk.com/media/2019/02/food-instagram-mistakes-how-to-lessons-0-1280x853.jpg"
                     alt="Delicious Pakistani Food"
                     class="img-fluid about-image" />
            </div>
            <div class="col-md-6 fade-in">
                <h2 class="section-title text-md-start">About PakTasty Bites</h2>
                <p class="lead text-muted mb-3">
                    We bring the rich and traditional taste of Pakistani cuisine to your table. From aromatic spicy biryani
                    to succulent kebabs and creamy desserts, our meals are crafted with love using premium ingredients
                    and authentic recipes passed down through generations.
                </p>
                <p class="text-muted">
                    Located in the heart of your city, we are committed to serving you freshly prepared desi meals
                    that capture the true essence of Pakistani hospitality and culinary excellence.
                </p>
                <div class="row text-center mt-4">
                    <div class="col-4">
                        <h4 class="text-warning fw-bold">500+</h4>
                        <small class="text-muted">Happy Customers</small>
                    </div>
                    <div class="col-4">
                        <h4 class="text-warning fw-bold">50+</h4>
                        <small class="text-muted">Menu Items</small>
                    </div>
                    <div class="col-4">
                        <h4 class="text-warning fw-bold">5★</h4>
                        <small class="text-muted">Average Rating</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Dishes Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="section-title fade-in">Our Signature Dishes</h2>
        <div class="row gy-4">
            @{
                var dishes = new[] {
                        new { Title = "Chicken Biryani", Desc = "Aromatic basmati rice cooked with tender chicken and traditional spices", Img = "https://images.unsplash.com/photo-1589302168068-964664d93dc0?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8YmlyeWFuaXxlbnwwfHwwfHx8MA%3D%3D" },
                        new { Title = "Seekh Kebab", Desc = "Juicy grilled minced meat kebabs seasoned with authentic Pakistani spices", Img = "https://images.unsplash.com/photo-1599487488170-d11ec9c172f0?w=400" },
                        new { Title = "Karahi Chicken", Desc = "Traditional wok-cooked chicken curry with fresh tomatoes and ginger", Img = "https://images.unsplash.com/photo-1585937421612-70a008356fbe?w=400" }
                        };
                foreach (var dish in dishes)
                {
                    <div class="col-md-4 fade-in">
                        <div class="card border-0 shadow-sm h-100 rounded-4 overflow-hidden">
                            <div style="height: 200px; background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('@dish.Img') center/cover;"></div>
                            <div class="card-body text-center">
                                <h5 class="card-title text-warning">@dish.Title</h5>
                                <p class="card-text text-muted">@dish.Desc</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Hungry Section -->
<section class="hungry-section text-center">
    <div class="container fade-in">
        <h2 class="display-4 fw-bold text-white mb-4">Feeling Hungry?</h2>
        <p class="lead text-white mb-4 opacity-90">
            Don't wait! Order your favorite Pakistani dishes now and satisfy your cravings with our authentic flavors.
        </p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="/Order/Create" class="btn btn-light btn-sm px-3 py-2 rounded-2 fw-semibold">
                Order Now
            </a>
            <a href="/Product" class="btn btn-outline-light btn-sm px-3 py-2 rounded-2 fw-semibold">
                View Menu
            </a>

        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section">
    <div class="container">
        <h2 class="section-title fade-in">Get In Touch</h2>
        <div class="row gy-4">
            <div class="col-lg-8 fade-in">
                <div class="contact-form">
                    <h4 class="mb-4 text-dark">Send us a Message</h4>
                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Full Name</label>
                                <input type="text" class="form-control" placeholder="Your full name" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Email Address</label>
                                <input type="email" class="form-control" placeholder="your.email@example.com" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Subject</label>
                            <input type="text" class="form-control" placeholder="What is this about?" required />
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Message</label>
                            <textarea class="form-control" rows="5" placeholder="Tell us how we can help you..." required></textarea>
                        </div>
                        <button type="submit" class="btn-custom ">Send Message</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 fade-in">
                <div class="contact-info">
                    <h4 class="mb-4 text-dark">Contact Information</h4>
                    <h5>📍 Address</h5>
                    <p class="text-muted">Street 12, G-9 Sector<br>Islamabad, Pakistan</p>
                    <h5>📧 Email</h5>
                    <p class="text-muted">support@paktastybites.pk<br>orders@paktastybites.pk</p>
                    <h5>📞 Phone</h5>
                    <p class="text-muted">+92 312 1234567<br>+92 51 1234567</p>
                    <h5>🕒 Working Hours</h5>
                    <p class="text-muted">Monday - Sunday<br>11:00 AM - 11:00 PM</p>
                    <div class="mt-4">
                        <h5>🚚 Delivery Areas</h5>
                        <p class="text-muted">We deliver to all major areas in Islamabad and Rawalpindi within 45 minutes!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
