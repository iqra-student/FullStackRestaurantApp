@model TequliesResturent.Models.Ingredient

@{
    ViewBag.Title = "Delete Ingredient";
}

<h2>Delete Ingredient</h2>

<h4>Are you sure you want to delete this ingredient?</h4>
<hr />

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
    </dl>

    @if (Model.ProductIngredients != null && Model.ProductIngredients.Any())
    {
        <h5>Used in Products:</h5>
        <ul class="list-group mb-3">
            @foreach (var pi in Model.ProductIngredients)
            {
                <li class="list-group-item">
                    <strong>@pi.Product.Name</strong> - @pi.Product.Description ($@pi.Product.Price)
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">No associated products.</p>
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IngredientId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
