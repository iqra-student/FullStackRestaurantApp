@model TequliesResturent.Models.Ingredient

@{
    ViewBag.Title = "Edit Ingredient";
}

<h2 class="mt-4 mb-4 text-primary">Edit Ingredient</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @* Hidden ID *@
            <input type="hidden" asp-for="IngredientId" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Ingredient Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
